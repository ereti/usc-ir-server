<nav class="navbar navbar-expand-sm navbar-light fixed-top" id="main-nav">
    <a class="navbar-brand" id="brand" href="/">
        <%= CONFIG.serverName %>
    </a>

    <ul class="navbar-nav mr-auto">
        <li class="nav-item">
            <a class="nav-link" href="/leaderboards/chart">Leaderboards</a>
        </li>
    </ul>

    <% if(username) { %>
        <ul class="navbar-nav">
            <li class="nav-item mx-1">
                <a class="nav-link" href="/profiles/<%= username %>">Hi, <%= username %>!</a>
            </li>
            <li class="nav-item mx-1">
                <a class="nav-link" href="/auth/logout">Logout</a>
            </li>
        </ul>
        <% } else { %>
            <ul class="navbar-nav">
                <li class="nav-item dropdown mx-1">
                    <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown">Login</a>
                    <div class="dropdown-menu dropdown-menu-right">
                        <form class="px-2 py-2 needs-validation" novalidate name="login" onsubmit="return false;">
                            <div class="form-group">
                                <label for="username">Username</label>
                                <input type="text" name="username" class="form-control" id="username-login"
                                    placeholder="Username" required>
                            </div>
                            <div class="form-group">
                                <label for="password">Password</label>
                                <input type="password" name="password" class="form-control" id="password-login"
                                    placeholder="Password" required minlength="8" maxlength="256">
                                <div class="invalid-feedback" id="login-feedback">
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary">Login</button>
                        </form>
                    </div>
                </li>
                <li class="nav-item dropdown mx-1">
                    <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown">Register</a>
                    <div class="dropdown-menu dropdown-menu-right">
                        <form class="px-2 py-2 needs-validation" novalidate name="register" onsubmit="return false;"
                            id="register-form">
                            <div class="form-group">
                                <label for="username">Username</label>
                                <input type="text" name="username" class="form-control" id="username-register"
                                    placeholder="Username" required>
                            </div>
                            <div class="form-group">
                                <label for="password">Password</label>
                                <input type="password" name="password" class="form-control" id="password-register"
                                    placeholder="Password" required minlength="8" maxlength="50">
                            </div>
                            <div class="form-group">
                                <div id="recaptcha-register" class="g-recaptcha"
                                    data-sitekey="<%= CONFIG.recaptchaSiteKey%>"></div>
                            </div>
                            <div class="invalid-feedback" id="register-feedback">
                            </div>
                            <button type="submit" class="btn btn-primary">Register</button>
                        </form>
                    </div>
                </li>
            </ul>
            <% } %>

                <script>
                    //courtesy of bootstrap documentation - lazy...

                    // Example starter JavaScript for disabling form submissions if there are invalid fields
                    (function () {
                        'use strict';
                        window.addEventListener('load', function () {
                            // Fetch all the forms we want to apply custom Bootstrap validation styles to
                            var forms = document.getElementsByClassName('needs-validation');
                            // Loop over them and prevent submission
                            var validation = Array.prototype.filter.call(forms, function (form) {
                                form.addEventListener('submit', function (event) {
                                    if (form.checkValidity() === false) {
                                        event.preventDefault();
                                        event.stopPropagation();
                                    }
                                    form.classList.add('was-validated');
                                }, false);
                            });
                        }, false);
                    })();
                </script>
                <script src="/js/auth.js"></script>
</nav>